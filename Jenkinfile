pipeline {
    agent any

    tools {
        jdk 'JDK25'          // Must match Global Tool name exactly
        maven 'Maven3'       // Must match Global Tool name exactly
    }


    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out code...'
                git branch: 'main', url: 'https://github.com/jehkundan/saucedemo-automation-framework.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'ğŸ§ª Running Maven tests...'
                sh 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                echo 'ğŸ“Š Generating Allure report...'
                allure includeProperties: false, results: [[path: 'allure-results']]
            }
        }
    }

    post {
        success { echo 'âœ… Build succeeded' }
        failure { echo 'âŒ Build failed â€” check console & Allure' }
        always  { echo 'ğŸ“Œ Pipeline finished' }
    }
}

