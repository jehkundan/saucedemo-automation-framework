pipeline {
    agent any

    tools {
        jdk 'JDK-25'           // âœ… Set this to the name of your JDK in Jenkins (Manage Jenkins â†’ Global Tool Configuration)
        maven 'Maven'          // âœ… Set this to your Maven installation name in Jenkins
    }

    triggers {
        cron('0 10 * * *')     // ğŸ•™ Run every day at 10:00 AM
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out code...'
                git branch: 'main', url: 'https://github.com/jehkundan/saucedemo-automation-framework.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'ğŸ§ª Running Maven Tests...'
                sh 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                echo 'ğŸ“Š Generating Allure Report...'
                allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
            }
        }
    }

    post {
        success {
            echo 'âœ… Build completed successfully!'
        }
        failure {
            echo 'âŒ Build failed. Check logs and reports.'
        }
        always {
            echo 'ğŸ“Œ Pipeline finished.'
        }
    }
}
