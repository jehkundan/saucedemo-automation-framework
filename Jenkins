pipeline {
    agent any

    tools {
        jdk 'JDK-25'           // ✅ Set this to the name of your JDK in Jenkins (Manage Jenkins → Global Tool Configuration)
        maven 'Maven'          // ✅ Set this to your Maven installation name in Jenkins
    }

    triggers {
        cron('0 10 * * *')     // 🕙 Run every day at 10:00 AM
    }

    stages {
        stage('Checkout') {
            steps {
                echo '📥 Checking out code...'
                git branch: 'main', url: 'https://github.com/jehkundan/saucedemo-automation-framework.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo '🧪 Running Maven Tests...'
                sh 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                echo '📊 Generating Allure Report...'
                allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
            }
        }
    }

    post {
        success {
            echo '✅ Build completed successfully!'
        }
        failure {
            echo '❌ Build failed. Check logs and reports.'
        }
        always {
            echo '📌 Pipeline finished.'
        }
    }
}
